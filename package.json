{
	"name": "suteppu",
	"displayName": "Suteppu",
	"description": "",
	"publisher": "Itsakaseru",
	"repository": "https://github.com/Itsakaseru/Suteppu",
	"version": "0.0.2",
	"license": "MIT",
	"engines": {
		"vscode": "^1.59.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "suteppu",
					"title": "Suteppu",
					"icon": "res/logo.svg"
				}
			]
		},
		"views": {
			"suteppu": [
				{
					"id": "suteppu.view.storage",
					"name": "Storage Memory"
				}
			]
		},
		"viewsWelcome": [
      		{
        		"view": "suteppu.view.storage",
        		"contents": "No Steps defined.\n\nIn order to use Steps, start saving step or you can load steps from file by clicking this button:\n[Load Steps from File](command:suteppu.loadFromFile)\nTo learn more about how to use Suteppu in VS Code [read the docs](https://willbeaddedin.the.future)."
      		}
    	],
		"menus": {
			"view/title": [
				{
					"command": "suteppu.saveToFile",
					"group": "navigation",
					"when": "view == suteppu.view.storage"
				},
				{
					"command": "suteppu.loadFromFile",
					"when": "view == suteppu.view.storage"
				},
				{
					"command": "suteppu.clearAllSteps",
					"group": "navigation",
					"when": "view == suteppu.view.storage"
				}
			]
		},
		"commands": [
			{
				"command": "suteppu.saveStep",
				"title": "Suteppu: Save step"
			},
			{
				"command": "suteppu.reStep",
				"title": "Suteppu: Redo step"
			},
			{
				"command": "suteppu.clearAllSteps",
				"title": "Suteppu: Clear all steps",
				"icon": "$(clear-all)"
			},
			{
				"command": "suteppu.saveToFile",
				"title": "Suteppu: Save Steps to File",
				"icon": "$(save)"
			},
			{
				"command": "suteppu.loadFromFile",
				"title": "Suteppu: Load Steps from File",
				"icon": "$(preferences-open-settings)"
			}
		],
		"keybindings": [
			{
    		"command": "suteppu.saveStep",
    		"key": "home",
    		"mac": "home",
    		"when": "editorTextFocus"
  			},
			{
    		"command": "suteppu.reStep",
    		"key": "end",
    		"mac": "end",
    		"when": "editorTextFocus"
  			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.59.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	}
}
